  line-height: 40rpx;
}
.content-money {
  margin-left: 10rpx;
}
.point-box {
  height: 40rpx;
  line-height: 40rpx;
}
.point-item{
  height: 40rpx;
  position: relative;
}
.picker-box {
  position: absolute;
  left: 0;
  top: 0;
  height: 40rpx;
  overflow: hidden;
  opacity: 0;
}
.point {
  width: 8rpx;
  height: 8rpx;
  background-color: #999;
  border-radius: 50%;
  margin-top: 16rpx;
  margin-left: 6rpx;
}
