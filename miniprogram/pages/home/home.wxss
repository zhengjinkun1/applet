}
.title-content {
  margin-top: 80rpx;
  position: relative;
}
.line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 2rpx;
  height: 24rpx;
  background-color: #000;
}
.title-content-box {
  font-size: 24rpx;
  color: #666;
}
.title-content-money {
